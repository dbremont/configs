#!/bin/bash

# Inspiraci√≥n: https://stackoverflow.com/a/19011599

while getopts b:f: flag
do
    case "${flag}" in
        b) b=${OPTARG};;
        f) f=${OPTARG};;
    esac
done

# echo "Base Directory: $b";
# echo "File: $f";

search_up() {
    local look=$1/

    while [[ -n $look ]]; do
        [[ -e $look/$2 ]] && {
            printf '%s\n' "$look"
            return
        }

        look=${look%/*}
    done

    [[ -e /$2 ]] && echo /
}

search_up $b $f
